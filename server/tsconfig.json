{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "sourceMap": true
   },
   "include": ["./src/**/*.ts"],
   "exclude": ["./dist/*", "../node_modules/**/*"]
}